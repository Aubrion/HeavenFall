            <string>//activate inventory
if (keyboard_check_pressed(ord('I')))
{
    active = -active;
}

//check if tab clicked
if (mouse_check_button_pressed(mb_left))
{
    if (point_in_rectangle(mouse_x,mouse_y,x-13,y+53,x,y+53+18)) curr_tab = 0;
    else if (point_in_rectangle(mouse_x,mouse_y,x-13,y+53+19,x,y+53+19+18) &amp;&amp; global.tab &gt;= 1) curr_tab = 1;
    else if (point_in_rectangle(mouse_x,mouse_y,x-13,y+53+19+19,x,y+53+19+19+18)&amp;&amp; global.tab &gt;= 2) curr_tab = 2;
    else if (point_in_rectangle(mouse_x,mouse_y,x-13,y+53+19+19+19,x,y+53+19+19+19+18)&amp;&amp; global.tab &gt;= 3) curr_tab = 3;
}

//drag and drop
if (mouse_check_button_pressed(mb_left) &amp;&amp; m_slotID == -1)
{
    for (i=0; i&lt;slots; i+=1)
    {
        if (slotStack[i] != 0 &amp;&amp; point_in_rectangle(mouse_x,mouse_y,x+slotX[i],y+slotY[i],x+slotX[i]+16,y+slotY[i]+16))
        {
            m_slotID = slotID[i];
            m_slotStack = slotStack[i];
            m_oldSlotT = 0;
            m_oldSlot = i;
            slotID[i] = -1;
            slotStack[i] = 0;
            it_gear_change();
            break;
        }       
    }
    
    for (i=0; i&lt;fs_slots; i+=1)
    {
        if (fs_slotStack[curr_tab,i] != 0 &amp;&amp; point_in_rectangle(mouse_x,mouse_y,x+fs_slotX[curr_tab,i],y+fs_slotY[curr_tab,i],x+fs_slotX[curr_tab,i]+16,y+fs_slotY[curr_tab,i]+16))
        {
            m_slotID = fs_slotID[curr_tab,i];
            m_slotStack = fs_slotStack[curr_tab,i];
            m_oldSlotT = 1;
            m_oldSlot = i;
            fs_slotID[curr_tab,i] = -1;
            fs_slotStack[curr_tab,i] = 0;
            break;
        }       
    }
}
else if (mouse_check_button_released(mb_left) &amp;&amp; m_slotID != -1)
{
    for (i=0; i&lt;slots; i+=1)
    {
        if (slotStack[i] == 0 &amp;&amp; point_in_rectangle(mouse_x,mouse_y,x+slotX[i],y+slotY[i],x+slotX[i]+16,y+slotY[i]+16))
        {
            if (ITEM.item[m_slotID, 1] == slotType[i])
            {
                slotID[i] = m_slotID;
                slotStack[i] = m_slotStack;
                m_slotID = -1;
                m_slotStack = 0;
                it_gear_change();
                break;
            }
        }       
    }
    
    for (i=0; i&lt;fs_slots; i+=1)
    {
        if (point_in_rectangle(mouse_x,mouse_y,x+fs_slotX[curr_tab,i],y+fs_slotY[curr_tab,i],x+fs_slotX[curr_tab,i]+16,y+fs_slotY[curr_tab,i]+16))
        {
            if (fs_slotID[curr_tab,i] != -1)
            {
                if (fs_slotStack[curr_tab,i]+m_slotStack &gt;= ITEM.item[fs_slotID[curr_tab,i],4])
                {
                    m_slotStack -= ITEM.item[fs_slotID[curr_tab,i],4] - fs_slotStack[curr_tab,i];
                    fs_slotStack[curr_tab,i] = ITEM.item[fs_slotID[curr_tab,i],4];
                    break;
                }
                else
                {
                    fs_slotStack[curr_tab,i] += m_slotStack;
                    m_slotID = -1;
                    m_slotStack = 0;
                    break;
                }
            }
            else
            {
                fs_slotID[curr_tab,i] = m_slotID;
                fs_slotStack[curr_tab,i] = m_slotStack;
                m_slotID = -1;
                m_slotStack = 0;
                break;
            }
        }       
    }
    
    if (m_slotID != -1)
    {
        if (m_oldSlotT == 0)
        {
            slotID[m_oldSlot] = m_slotID;
            slotStack[m_oldSlot] = m_slotStack;
            m_slotID = -1;
            m_slotStack = 0;
        }
        else if (m_oldSlotT == 1)
        {
            fs_slotID[curr_tab,m_oldSlot] = m_slotID;
            fs_slotStack[curr_tab,m_oldSlot] = m_slotStack;
            m_slotID = -1;
            m_slotStack = 0;
        }
    }
}
